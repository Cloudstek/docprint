// @flow

/**
 * Sanitize array
 * @param {Array.any} input Input array
 * @return {Array.any} Sanitized array
 */
export function sanitize(input: Array<any>) {
    return input.filter(a => a);
}

/**
 * Capitalize string
 * @param {string} str Input string
 * @return {string}
 */
export function capitalize(str: ?string) {
    return str && str.charAt(0).toUpperCase() + str.slice(1);
}

/**
 * Strip slash from the end of a string
 * @param {string} str Input string
 * @return {string|null}
 */
export function stripSlash(str: ?string): ?string {
    if (str && str.endsWith('/')) {
        return str.substr(0, str.length - 1);
    }

    return str;
}

/**
 * Slugify string
 * @param {string} str Input string to slugify
 * @return {string}
 */
export function slugify(str: string): string {
    return str && str.toLowerCase()
        .replace(/\s+/g, '-')
        .replace(/[^\w-]+/g, '')
        .replace(/--+/g, '-')
        .replace(/^-+/, '')
        .replace(/-+$/, '');
}
